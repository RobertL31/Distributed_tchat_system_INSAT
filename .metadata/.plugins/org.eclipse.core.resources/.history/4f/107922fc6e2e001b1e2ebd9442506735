package localApp;

import java.io.IOException;
import java.net.ServerSocket;

public class LocalSystemConfig {
	
	public static final int START_PORT = 65000;
	public static final int END_PORT = 65500;
	
	private static int m_actual_port_number;
	
	
	
	
	public static ServerSocket openServer() {
		
		ServerSocket TCP_socket = null;
		
		for(int i = START_PORT; i <= END_PORT; ++i) {
			
			try {
				TCP_socket = new ServerSocket(i);
				break;
				
			} catch (IOException e) {}
		}
		
		return TCP_socket;
	}
	
	
	
}
